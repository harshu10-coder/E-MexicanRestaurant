@model OrderViewModel
<h1>My Cart</h1>
<!-- form to finalize and create the order-->

<form asp-action="Placeholder" method="get">
    <h3>Order Items</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th> Products</th>
                <th> Quantity</th>
                <th> Price</th>
                <th> Total </th>
            </tr>
        </thead>
        <tbody>
            @for(int i=0;i<Model.OrderItems.Count;i++)
            {
                <tr>
                    <td>@Model.OrderItems[i].ProductName</td>
                    <td>@Model.OrderItems[i].Quantity</td>
                    <td>@Model.OrderItems[i].Price</td>
                    <td></td>
                </tr>
            }
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td class="bg-primary bg-gradient text-white fw-bold">@Model.TotalAmount.ToString("c", new System.Globalization.CultureInfo("hi-IN"))</td>
            </tr>






        </tbody>

    </table>
</form>